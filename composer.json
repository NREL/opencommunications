{
    "name": "nrel/opencommunications",
    "description": "Open Communications profile is Aquia Lightning sub-distribution for NREL/DOE Drupal 8 sites.",
    "type": "drupal-profile",
    "homepage": "https://github.com/NREL/opencommunications",
    "authors": [
        {
            "name": "Damon Haley (dhaley)",
            "email": "damon.haley@nrel.gov",
            "role": "Maintainer"
        },
        {
            "name": "Shaun Laws (slaws)",
            "email": "shaun.laws@nrel.gov",
            "role": "Co-maintainer"
        }
    ],
    "support": {
        "issues": "https://github.com/NREL/opencommunications/issues"
    },
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "behat/mink-zombie-driver": "^1.4",
        "drupal/big_pipe_demo": "^1.2",
        "drupal/devel_entity_updates": "^1.0",
        "drupal/twig_vardumper": "^1.1",
        "drupal/twig_xdebug": "^1.0",
        "drupal/vardumper": "^1.4",
        "drush/config-extra": "^1.0",
        "pear/console_color2": "^0.1.2"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "assets": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "dev": {
            "type": "github",
            "url": "https://github.com/acquia/lightning-dev",
            "no-api": true
        }
    },
    "config": {
        "preferred-install": {
            "drupal/core": "dist"
        },
        "sort-packages": true,
        "platform": {
            "php": "7.3.0"
        }
    },
    "extra": {
        "enable-patching": true,
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "patches": {
          "drupal/advagg": {
            "AdvaggCommands TypeError: Argument 3 must be an instance of FileSystem - https://www.drupal.org/project/advagg/issues/3201922":
            "https://www.drupal.org/files/issues/2021-03-10/fix-issue-with-advagg-and-s3fs-modules-3201922-3.patch"
          },
          "drupal/core": {
            "https://www.drupal.org/project/drupal/issues/2804195 - Views does not create parent local task for a default local task":
            "https://www.drupal.org/files/issues/2018-04-03/2804195-54.patch"
          }
        },
        "patchLevel": {
            "drupal/core": "-p2"
        }
    },
    "require": {
        "acquia/lightning": "~4.1.18",
        "aws/aws-sdk-php": "~3.0",
        "bower-asset/highlightjs": "^9.12",
        "bower-asset/imagesloaded": "^4.1",
        "bower-asset/masonry": "^4.2",
        "drupal/address": "~1.0",
        "drupal/admin_toolbar": "~2.0",
        "drupal/advagg": "^4.0",
        "drupal/auto_entitylabel": "~3.0-beta",
        "drupal/block_styles": "^1.2",
        "drupal/colorapi": "^1.0",
        "drupal/config_split": "~1.4",
        "drupal/console": "~1.6",
        "drupal/contribute": "~1.0-beta8",
        "drupal/editor_file": "^1.2",
        "drupal/field_token_value": "^2.0",
        "drupal/google_tag": "~1.1",
        "drupal/hsts": "^1.0",
        "drupal/image_effects": "^3.0",
        "drupal/imagemagick": "^3.1",
        "drupal/jquery_colorpicker": "^2.0",
        "drupal/log_stdout": "~1.0",
        "drupal/memcache": "^2.1",
        "drupal/password_policy": "^3.0",
        "drupal/recaptcha": "^3.0",
        "drupal/schema_metatag": "^1.3",
        "drupal/seckit": "^2.0",
        "drupal/ses_mailer": "^1.0@alpha",
        "drupal/views_bulk_edit": "^2.2",
        "drupal/x_frame_options": "^1.1",
        "drupal/xls_serialization": "~1.0",
        "elasticsearch/elasticsearch": "^5.2",
        "guzzlehttp/guzzle": "^6.3",
        "jsq/amazon-es-php": "^0.2.0",
        "lsolesen/pel": "^0.9.6",
        "monolog/monolog": "^1.23",
        "nodespark/des-connector": "5.x-dev",
        "phenx/php-font-lib": "^0.5.0",
        "phpoffice/phpspreadsheet": "^1.1.0",
        "simplesamlphp/simplesamlphp": "^1.14",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
     "conflict": {
        "drupal/drupal": "*"
    }
}
