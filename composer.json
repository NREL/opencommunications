{
    "name": "nrel/opencommunications",
    "description": "Open Communications profile for NREL/DOE Drupal 8 sites.",
    "type": "drupal-profile",
    "homepage": "https://github.com/NREL/opencommunications",
    "authors": [
        {
            "name": "Shaun Laws (slaws)",
            "email": "shaun.laws@nrel.gov",
            "role": "Co-maintainer"
        },
        {
            "name": "Chris Modern (cmodern)",
            "email": "chris.modern@nrel.gov",
            "role": "Co-maintainer"
        }
    ],
    "support": {
        "issues": "https://github.com/NREL/opencommunications/issues"
    },
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
       "assets" : {
            "type": "composer",
            "url": "https://asset-packagist.nrel.gov/nrel/drupal8/",
            "options" : {
                "ssl" : {
                    "verify_peer": false,
                    "allow_self_signed": true
                }
            }
        },
        "packagist.org": false
    },
    "require": {
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.4",
        "drupal/blazy": "^2.1",
        "drupal/bootstrap_layouts": "^5.2",
        "drupal/composer_deploy": "^1.7",
        "drupal/core-composer-scaffold": "10.3.0",
        "drupal/core-project-message": "10.3.0",
        "drupal/core-recommended": "10.3.0",
        "drupal/ctools": "^4.0",
        "drupal/embed": "^1.4",
        "drupal/entity_browser": "^2.5",
        "drupal/entity_embed": "^1.1",
        "drupal/entity_reference_revisions": "^1.10",
        "drupal/field_group": "^3.2",
        "drupal/google_tag": "^2.0",
        "drupal/health_check": "^3.0",
        "drupal/honeypot": "^2.0",
        "drupal/image_widget_crop": "^2.3",
        "drupal/imagemagick": "^3.3",
        "drupal/log_stdout": "^1.5",
        "drupal/metatag": "^1.17",
        "drupal/module_filter": "^4.0",
        "drupal/paragraphs": "^1.12",
        "drupal/password_policy": "^4.0",
        "drupal/pathauto": "^1.8",
        "drupal/recaptcha": "^3.0",
        "drupal/recaptcha_v3": "^2.0",
        "drupal/reroute_email": "^2.2",
        "drupal/seckit": "^2.0",
        "drupal/security_review": "^2.0",
        "drupal/smtp": "^1.0",
        "drupal/sophron": "^2.0",
        "drupal/stage_file_proxy": "^2.0",
        "drupal/username_enumeration_prevention": "^1.2",
        "drupal/video_embed_field": "^2.5",
        "drupal/webform": "^6.2",
        "drush/drush": "^12.0",
        "fileeye/mimemap": "^2.0",
        "mglaman/composer-drupal-lenient": "^1.0",
        "nrel/nrel_cyber": "dev-main",
        "nrel/ses_mailer": "dev-main",
        "phpmailer/phpmailer": "^6.5"
    },
    "require-dev": {
        "drupal/devel": "^5.0",
        "kint-php/kint": "^3.3"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "mglaman/composer-drupal-lenient": true
        }
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "extra": {
        "drupal-core-project-message": {
            "post-create-project-cmd-message": [
                "You have successfully installed your new site code using nrel/opencommunications."
            ]
        },
        "drupal-scaffold": {
            "file-mapping": {
                "./.gitignore": {
                    "mode": "replace",
                    "path": "assets/scaffold/files/git/.gitignore",
                    "overwrite": false
                },
                "./scripts/fix-permissions.sh": "assets/scaffold/files/scripts/fix-permissions.sh",
                "[web-root]/sites/default/ses_mailer.services.yml": "assets/scaffold/files/services/ses_mailer.services.yml",
                "[web-root]/sites/default/settings.php": {
                    "mode": "replace",
                    "path": "assets/scaffold/files/settings/settings.php",
                    "overwrite": false
                },
                "[web-root]/libraries/blazy/blazy.js": "assets/scaffold/files/blazy/blazy.js",
                "[web-root]/libraries/blazy/blazy.min.js": "assets/scaffold/files/blazy/blazy.min.js"
            },
            "locations": {
                "web-root": "web/"
            }
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "patches": {
            "drupal/ses_mailer": {
                "https://www.drupal.org/project/ses_mailer/issues/3385960: Drupal 10 compatibilitye": "https://www.drupal.org/files/issues/2023-09-07/ses-mailer-d10-compatibility-3385960-5.patch"
            },
            "drupal/username_enumeration_prevention": {
                "https://www.drupal.org/project/username_enumeration_prevention/issues/3165886: Password Reset form validation is not prompted anymore": "https://www.drupal.org/files/issues/2023-03-09/3165886-11.patch"
            },
            "drupal/webform": {
                "https://www.drupal.org/project/webform/issues/3380639: The select an element interface has duplicate icons": "https://www.drupal.org/files/issues/2023-08-11/the-select-an-element-interface-has-duplicate-icons-3380639-4.patch",
                "https://www.drupal.org/project/webform/issues/3382545: allowtransparency and frameborder are obsolete": "https://www.drupal.org/files/issues/2023-08-22/3382545-remove-obsolete-attributes.patch"
            }
        },
        "drupal-lenient": {
            "allowed-list": ["drupal/ses_mailer"]
        }
    }
}
